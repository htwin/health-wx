<!--pages/pay/pay.wxml-->
<view>
<view class="header-line">
  订单将在<text style="color:#A40035">{{minute}}:{{second}}</text>后关闭，请尽快付款！
</view>
    <view class="header">
    
        <view class="tech-image">
          <image src="{{payOrder.img}}"></image>
          <view>
            {{payOrder.technicianName}}
          </view>
        </view>
        <view class="pay-info">
            <view class="pay-store">
                预约门店：{{payOrder.storeName}}
            </view>
            <view class="start-time">
                开始时间：{{payOrder.starttime}}
            </view>
            <view class="service-project">
                服务项目：{{payOrder.healthItemName}}/{{payOrder.serviceTime}}分钟
            </view>
            <view class="pay-money">
                项目金额： <text style="color:#A40035">￥{{payOrder.price}}</text>
            </view>
        </view>
    </view>
    <view class="header-line"></view>

    <view class="bottom">
         <view class="bottom-info">
            选择支付方式
        </view>
        <view class="method">
            <view class="method1">
                <image src="../../images/select.png"></image>
            </view>
             <view class="method1">
                <image src="../../images/my_money.png"></image>
            </view>
            <view class="method2">
                余额支付
            </view>
            <view class="money">
              <text class="text1">当前余额 </text>
              <text class="text2" >￥0.00</text>
            <text class="text3" >去充值></text>
            </view>
        </view>
        <view class="method">
            <view class="method1">
                <image src="../../images/selected.png"></image>
            </view>
             <view class="method1">
                <image src="../../images/wx_logo.png"></image>
            </view>
            <view class="method2">
                微信支付
            </view>
        </view>
        
    </view>
    <view  bindtap="doPay" class="select-btn">
    去支付
  </view>
</view>
