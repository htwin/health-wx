/* pages/payGift/payGift.wxss */
.big-image{
  display: flex;
  justify-content: center;
  margin-top: 20rpx;
}
.big-image image{
  border-radius: 30rpx;
  width: 600rpx;
  height: 350rpx;
}
.small-image{
  display: flex;
  flex-direction: row
}
.small-image image{
  border-radius: 30rpx;
  margin: 30rpx 20rpx 20rpx 20rpx;
  width: 220rpx;
  height: 125rpx;
}
.select-item .title{
  padding: 20rpx;
  border-bottom: 1rpx solid #f2f2f2
}
.select-item .item{
  display: flex;
  flex-direction: row;
  padding: 20rpx;
  border-bottom: 2rpx solid #f2f2f2
}
.select-item .item .item-price .price-top{
    font-size: 28rpx;
    margin: -10rpx 0rpx 0rpx 20rpx;
}
.select-item .item .item-price .price-bottom{
  width: 120rpx;
  color: #A40035;
    font-size: 28rpx;
    margin: 10rpx 0rpx 0rpx 15rpx;
}

.select-item .item .item-image image{
  border-radius: 10rpx;
  width: 110rpx;
  height: 70rpx;
}
.pay-btn{
  margin: 10rpx 0rpx 0rpx 300rpx;
  color: #A40035;
  text-align: center;
  line-height: 50rpx;
  border-radius: 40rpx;
  border: 1rpx solid #A40035;
  width: 120rpx;
  height: 50rpx;
}