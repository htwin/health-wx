.header {
  
  display: -webkit-flex;
  left: 0;
  top: 0;
  width: 100%;
  padding: 15rpx;
  box-sizing: border-box;
  z-index: 1;
  background-color: #A40035;
  -webkit-transition: background 0.5s ease-in-out;
}

.header .icon {
  width: 40rpx;
  height: 40rpx;
  vertical-align: top;
  margin-left: -15rpx;
}

.header .location {
  color: #fff;
  font-size: 28rpx;
  line-height: 40rpx;
  min-width: 100rpx;
  max-width: 340rpx;
  padding: 8rpx 10rpx 5rpx 10rpx;
  border-radius: 20rpx;
  margin-right: 20rpx;
  vertical-align: center;
}
.header .search {
  width: 58%;
  color: #888;
  font-size: 25rpx;
  line-height: 40rpx;
  padding: 10rpx;
  padding-left: 30rpx;
  border-radius: 30rpx;
  background: #fff;
  /*border-bottom: 1rpx solid #aaa;*/
}
.scancode{
    position: absolute;
    right: 5%;
    top: 6px;
    width: 80rpx;
    height: 80rpx;
    
    border-radius: 50%;
    z-index: 11;
}
.code{
   width: 66rpx;
   height: 66rpx;
   padding: 8rpx 0 0 8rpx;
}
.banner{
  height: 340rpx;
  border-radius: 25rpx;
  margin:0rpx 15rpx 5rpx 15rpx
}
.banner image{
  height: 100%;
  width: 100%
}

.swiper-item{
  border-radius: 25rpx;
  
}
.header_banner{
 position: absolute;
 width: 100%
}
.banner_center{
  width: 100%;
  height: 340rpx;
  position: static;
}
.banner_top{
  height: 215rpx; 
  background-color: #A40035;
}
.banner_up{
 height: 150rpx;
  background-color: #FFFFFF;
}
.nav_section{
    width:100%;
    
}
.nav_section_items{
    display:flex;
    flex-direction: row;
    justify-content: space-between;
    padding:30rpx;
    border-bottom:2rpx solid #ddd;
    position: relative;
}
.nav_section_items:active{
    background:#ddd;
}
.nav_section_items .section_image{
    width:200rpx;
    height:200rpx;
    
}
.nav_section_items .section_image image{
  border-radius: 25rpx;
    width:100%;
    height:100%;
}
.nav_section_items .section_cont{
    width:360rpx;
    font-size:26rpx;
    color:#a9a9a9;
}
.nav_section_items .section_cont view{
    overflow:hidden;
    text-overflow: ellipsis;
    white-space:nowrap;
    display: block;
}
.nav_section_items .section_cont .section_cont_intro{
    white-space:normal;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.nav_section_items .section_cont .store_name{
    font-size: 32rpx;
   margin: 10rpx 0rpx 30rpx 30rpx;
    color:#000;
   
}
.nav_section_items .section_cont .county{
  margin: 10rpx 0rpx 30rpx 30rpx;
    font-size:25rpx;
    color:#a9a9a9;
    margin-left: 30rpx;
}

.nav_section_items .section_cont .city{
    font-size: 30rpx;
    line-height:60rpx;
    color:#343434;
    margin-left: 30rpx;
}

.nav_section_items .section_book{
   
    font-size:26rpx;
    
    background-size:17rpx 28rpx;
    line-height: 80rpx;
    color:#A40035;
    text-align: left;
    margin-top:5rpx;
    padding-left:30rpx;
}
.nav_section_items .store_detail{
   
    font-size:32rpx;
    
    
    line-height: 80rpx;
    color:#a9a9a9;
    text-align: left;
    margin-top:40rpx;
    padding-left:10rpx;
}


