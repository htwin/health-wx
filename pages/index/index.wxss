.header {
  
  display: -webkit-flex;
  left: 0;
  top: 0;
  width: 100%;
  padding: 15rpx;
  box-sizing: border-box;
  z-index: 1;
  background-color: #0F7E40;
  -webkit-transition: background 0.5s ease-in-out;
}
.cityList{
  z-index: 100;
  position: absolute;
  width: 100%;
  background-color: white
   
}
.cityList .city-name{
  height: 50rpx;
  padding: 10rpx 0rpx 5rpx 20rpx;
  border-bottom: 2rpx solid #f2f2f2
}

.header .icon {
  width: 40rpx;
  height: 40rpx;
  vertical-align: top;
  margin-left: -15rpx;
}

.header .location {
  color: #fff;
  font-size: 28rpx;
  line-height: 40rpx;
  min-width: 100rpx;
  max-width: 340rpx;
  padding: 8rpx 10rpx 5rpx 10rpx;
  border-radius: 20rpx;
  margin-right: 20rpx;
  vertical-align: center;
}
.header .search {
  width: 58%;
  color: #888;
  font-size: 25rpx;
  line-height: 40rpx;
  padding: 10rpx;
  padding-left: 30rpx;
  border-radius: 30rpx;
  background: #fff;
  /*border-bottom: 1rpx solid #aaa;*/
}
.scancode{
    position: absolute;
    right: 5%;
    top: 6px;
    width: 80rpx;
    height: 80rpx;
    
    border-radius: 50%;
    z-index: 11;
}
.code{
   width: 66rpx;
   height: 66rpx;
   padding: 8rpx 0 0 8rpx;
}
.banner{
  height: 340rpx;
  border-radius: 25rpx;
  margin:0rpx 15rpx 5rpx 15rpx
}
.banner image{
  height: 100%;
  width: 100%
}

.swiper-item{
  border-radius: 25rpx;
  
}
.header_banner{
 position: absolute;
 width: 100%
}
.banner_center{
  width: 100%;
  height: 340rpx;
  position: static;
}
.banner_top{
  height: 215rpx; 
  background-color: #0F7E40;
}
.banner_up{
 height: 150rpx;
  background-color: #FFFFFF;
}
.nav_section{
    width:100%;
  
   
}
.nav_section_items{
    height: 215rpx;
    background-color: #f2f2f2;
    
    justify-content: space-between;
   padding: 10rpx 25rpx 10rpx 25rpx;
    margin: 15rpx 0rpx 15rpx 0rpx;
    position: relative;
}
.nav_section_items green{
    height: 215rpx;
    background-color: #0F7E40;
    
    justify-content: space-between;
   padding: 10rpx 25rpx 10rpx 25rpx;
    margin: 15rpx 0rpx 15rpx 0rpx;
    position: relative;
}
.nav_section_items .item{
  height: 100%;
  background-color: #FDFDFD;
  display:flex;
    flex-direction: row;
}
.nav_section_items:active{
    background:#ddd;
}
.nav_section_items .section_image{
 
    padding: 15rpx 0rpx 15rpx 0rpx;
    width:220rpx;
   
    
}
.nav_section_items .section_image image{
  margin-left: -10rpx;
  border-radius: 20rpx;
    width:100%;
    height:100%;
}
.nav_section_items .section_cont{
    width:310rpx;
    font-size:26rpx;
    color:#a9a9a9;
}
.nav_section_items .section_cont view{
    overflow:hidden;
    text-overflow: ellipsis;
    white-space:nowrap;
    display: block;
}
.nav_section_items .section_cont .section_cont_intro{
    white-space:normal;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.nav_section_items .section_cont .store_name{
    font-size: 28rpx;
    margin: 15rpx 0rpx 0rpx 30rpx;
    color:#000;
   
}
.nav_section_items .section_cont .county{
  margin: 20rpx 0rpx 0rpx 30rpx;
    font-size:28rpx;
    color:#696F64;
    margin-left: 30rpx;
}

.nav_section_items .section_cont .city{
    width: 260rpx;
    font-size: 28rpx;
    line-height:60rpx;
    color:#696F64;
    margin: 20rpx 0rpx 0rpx 30rpx;
}

.nav_section_items .section_book .distance{
    margin-top: 6rpx;
    font-size:28rpx;
    background-size:17rpx 28rpx;
    line-height: 60rpx;
    color:#060202;
    text-align: left;
   
    padding-left:10rpx;
}
.nav_section_items .section_book{
  display: flex;
  flex-direction: row;
}
.nav_section_items .section_book image{
  margin-right: -7rpx;
  margin-top: 11rpx;
  width: 35rpx;
  height: 50rpx;
}
.nav_section_items .store_detail{
   
    font-size:33rpx;
    
    
    line-height: 80rpx;
    color:#696F64;
    text-align: left;
    margin:55rpx 0rpx 0rpx 0rpx;
    
}


