<!--pages/login/login.wxml-->
<view>
     <view class="header">
        <image src="../../images/share1.png"></image>
    </view>
    <view class="login-form">
        <view class="telephone">
          <input bindinput="getTelephoneInpt" placeholder="手机号"></input>
        </view>
        <view class="code">
            <view class="code-form">
              <input bindinput="getCodeInpt" placeholder="验证码"></input>
            </view>
            <view bindtap="getCode" class="send-code">
               获取验证码
            </view>
        </view>
        <view bindtap="loginOrRegister" class="confirm">
           确认
        </view>
    </view>
</view>
