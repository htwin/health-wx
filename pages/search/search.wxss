/* pages/search/search.wxss */
.header {
  
  display: -webkit-flex;
  left: 0;
  top: 0;
  width: 100%;
  padding: 15rpx;
  box-sizing: border-box;
  z-index: 1;
  background-color: #0F7E40;
  -webkit-transition: background 0.5s ease-in-out;
}

.header .icon {
  width: 40rpx;
  height: 40rpx;
  vertical-align: top;
  margin-left: -15rpx;
}
.header .search {
  margin-left: 80rpx;
  display: flex;
  width: 70%;
  color: #888;
  font-size: 25rpx;
  line-height: 40rpx;
  padding: 10rpx;
  padding-left: 30rpx;
  border-radius: 30rpx;
  background: #fff;
  /*border-bottom: 1rpx solid #aaa;*/
}
.header .search .search-content{
  
  margin-top: -3rpx;
  width: 100%;
  height: 50rpx
}
.header .search-btn{
  margin: 8rpx 0rpx 0rpx 25rpx;
  width:20%;
  height: 30rpx
}
.header .search-btn button{
  font-size: 30rpx;
  border-radius: 50rpx;
}
.nav_section{
    width:100%;
    
}
.nav_section_items{
    height: 215rpx;
    background-color: #f2f2f2;
    
    justify-content: space-between;
   padding: 10rpx 25rpx 10rpx 25rpx;
    margin: 15rpx 0rpx 15rpx 0rpx;
    position: relative;
}
.nav_section_items .item{
  height: 100%;
  background-color: #FDFDFD;
  display:flex;
    flex-direction: row;
}
.nav_section_items:active{
    background:#ddd;
}
.nav_section_items .section_image{
 
    padding: 15rpx 0rpx 15rpx 0rpx;
    width:220rpx;
   
    
}
.nav_section_items .section_image image{
  margin-left: -10rpx;
  border-radius: 20rpx;
    width:100%;
    height:100%;
}
.nav_section_items .section_cont{
    width:310rpx;
    font-size:26rpx;
    color:#a9a9a9;
}
.nav_section_items .section_cont view{
    overflow:hidden;
    text-overflow: ellipsis;
    white-space:nowrap;
    display: block;
}
.nav_section_items .section_cont .section_cont_intro{
    white-space:normal;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.nav_section_items .section_cont .store_name{
    font-size: 32rpx;
    margin: 15rpx 0rpx 0rpx 30rpx;
    color:#000;
   
}
.nav_section_items .section_cont .county{
  margin: 20rpx 0rpx 0rpx 30rpx;
    font-size:28rpx;
    color:#696F64;
    margin-left: 30rpx;
}

.nav_section_items .section_cont .city{
    width: 260rpx;
    font-size: 28rpx;
    line-height:60rpx;
    color:#696F64;
    margin: 20rpx 0rpx 0rpx 30rpx;
}

.nav_section_items .section_book{
    margin-top: 8rpx;
    font-size:28rpx;
    background-size:17rpx 28rpx;
    line-height: 60rpx;
    color:#060202;
    text-align: left;
   
    padding-left:10rpx;
}
.nav_section_items .store_detail{
   
    font-size:30rpx;
    
    
    line-height: 80rpx;
    color:#696F64;
    text-align: left;
    margin-top:60rpx;
    
}