/* pages/search/search.wxss */
.header {
  
  display: -webkit-flex;
  left: 0;
  top: 0;
  width: 100%;
  padding: 15rpx;
  box-sizing: border-box;
  z-index: 1;
  background-color: #A40035;
  -webkit-transition: background 0.5s ease-in-out;
}

.header .icon {
  width: 40rpx;
  height: 40rpx;
  vertical-align: top;
  margin-left: -15rpx;
}
.header .search {
  display: flex;
  width: 70%;
  color: #888;
  font-size: 25rpx;
  line-height: 40rpx;
  padding: 10rpx;
  padding-left: 30rpx;
  border-radius: 30rpx;
  background: #fff;
  /*border-bottom: 1rpx solid #aaa;*/
}
.header .search .search-content{
  margin-top: -3rpx;
  width: 100%;
  height: 50rpx
}
.header .search-btn{
  margin: 8rpx 0rpx 0rpx 25rpx;
  width:20%;
  height: 30rpx
}
.header .search-btn button{
  font-size: 30rpx;
  border-radius: 50rpx;
}
.nav_section{
    width:100%;
    
}
.nav_section_items{
    display:flex;
    flex-direction: row;
    justify-content: space-between;
    padding:30rpx;
    border-bottom:2rpx solid #ddd;
    position: relative;
}
.nav_section_items:active{
    background:#ddd;
}
.nav_section_items .section_image{
    width:200rpx;
    height:200rpx;
    
}
.nav_section_items .section_image image{
  border-radius: 25rpx;
    width:100%;
    height:100%;
}
.nav_section_items .section_cont{
    width:360rpx;
    font-size:26rpx;
    color:#a9a9a9;
}
.nav_section_items .section_cont view{
    overflow:hidden;
    text-overflow: ellipsis;
    white-space:nowrap;
    display: block;
}
.nav_section_items .section_cont .section_cont_intro{
    white-space:normal;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.nav_section_items .section_cont .store_name{
    font-size: 32rpx;
   margin: 10rpx 0rpx 30rpx 30rpx;
    color:#000;
   
}
.nav_section_items .section_cont .county{
  margin: 10rpx 0rpx 30rpx 30rpx;
    font-size:25rpx;
    color:#a9a9a9;
    margin-left: 30rpx;
}

.nav_section_items .section_cont .city{
    font-size: 30rpx;
    line-height:60rpx;
    color:#343434;
    margin-left: 30rpx;
}

.nav_section_items .section_book{
   
    font-size:26rpx;
    
    background-size:17rpx 28rpx;
    line-height: 80rpx;
    color:#A40035;
    text-align: left;
    margin-top:5rpx;
    padding-left:30rpx;
}
.nav_section_items .store_detail{
    font-size:32rpx;
    line-height: 80rpx;
    color:#a9a9a9;
    text-align: left;
    margin-top:40rpx;
    padding-left:10rpx;
}