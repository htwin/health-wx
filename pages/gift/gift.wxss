/* pages/gift/gift.wxss */
.gift{
  text-align: center;
  margin-top:25rpx;
  width: 100%;
}
.gift .gift-text{
 
  font-size: 32rpx;
  color: #0F7E40;
  
  margin-bottom: 20rpx
  
}

.gift .gift-image{
  
  margin: 10rpx 50rpx 20rpx 50rpx;
  height:310rpx;
}
.gift .gift-image image{
  bactivity-radius: 28rpx;
  width: 100%;
  height: 100%
}
.no-activity{
  font-size: 30rpx;
  margin-top: 30rpx;
  text-align: center;
  color: #867F80
}
.have-activity{
  text-align: center;
  display: flex;
  justify-content: center
}
.have-activity .activity-item{
  bactivity-radius: 15rpx;
  text-align: left;
  padding: 10rpx 20rpx 10rpx 20rpx;
  font-size: 35rpx;
  margin-top: 30rpx;
  width: 650rpx;
  height: 180rpx;
  background-color: #0F7E40;
  display: flex;
  justify-content: center;
}
.have-activity .activity-item .activity-info{
  padding: 15rpx 0rpx 25rpx 30rpx;
  bactivity-radius: 15rpx;
  width: 620rpx;
  height: 140rpx;
  background-color: #FDFDFD
}