/* pages/toProject/toProject.wxss */
.header{
  display: flex;
  flex-direction: row
}
.header .project-item{
  margin-left: 20rpx;
  width: 160rpx;
  height: 160rpx;
}
.header .project-item image{
  width: 100%;
  height: 100%
}
.header .project-item text{
  margin-left: 30rpx;
  font-size: 30rpx;
  color: #CCCCCC;
  font-weight: 500
}
.nav_section{
    width:100%;
    margin-top: 80rpx;
}
.nav_section_items{
    display:flex;
    flex-direction: row;
    justify-content: space-between;
    padding:30rpx 30rpx 20rpx 30rpx;
    border-bottom:2rpx solid #ddd;
    position: relative;
}
.nav_section_items:active{
    background:#ddd;
}
.nav_section_items .section_image{
    width:200rpx;
    height:200rpx;
    
}
.nav_section_items .section_image image{
  border-radius: 25rpx;
    width:100%;
    height:100%;
}
.nav_section_items .section_cont{
    width:360rpx;
    font-size:26rpx;
    color:#a9a9a9;
}


.nav_section_items .section_cont .store_name{
    font-size: 25rpx;
   margin: 20rpx 0rpx 30rpx 30rpx;
    color:#000;
   
}
.nav_section_items .section_cont .store_name text{
  color: #A40035
}
.nav_section_items .section_cont .county{
  
  margin: 10rpx 0rpx 30rpx 30rpx;
    font-size:23rpx;
    color:#a9a9a9;
    margin-left: 30rpx;
}

.nav_section_items .section_cont .city{
    font-size: 30rpx;
    line-height:60rpx;
    color:#343434;
    margin-left: 30rpx;
}

.nav_section_items .section_book{
   
    font-size:26rpx;
    
    background-size:17rpx 28rpx;
    line-height: 80rpx;
    color:#A40035;
    text-align: left;
    margin-top:5rpx;
    padding-left:30rpx;
}
.nav_section_items .store_detail{
   
    font-size:32rpx;
    
    
    line-height: 80rpx;
    color:#a9a9a9;
    text-align: left;
    margin-top:120rpx;
    
    padding-left:10rpx;
}

