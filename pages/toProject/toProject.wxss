.nav_section_items .item{
  border-radius: 10rpx;
  height: 100%;
  background-color: #DBE2DC;
  display:flex;
    flex-direction: row;
}

.nav_section_items:active{
    background:#ddd;
}
.nav_section_items .section_image{
  margin-top: 15rpx;
    width:230rpx;
