.nav_section_items{
    display:flex;
    flex-direction: row;
    
    padding:30rpx 30rpx 20rpx 30rpx;
    border-bottom:2rpx solid #ddd;
    position: relative;
}
.nav_section_items:active{
    background:#ddd;
}
.nav_section_items .section_image{
    width:120rpx;
    height:120rpx;
    
}
.nav_section_items .section_image image{
  border-radius: 100rpx;
    width:100%;
    height:100%;
}
.nav_section_items .section_cont{
    width:450rpx;
    margin: 10rpx 0rpx 0rpx 20rpx;
    
}
.nav_section_items .section_cont .tech-price{
    font-size: 25rpx;
    margin-top: 20rpx
}
.nav_section_items .section_cont view{
    overflow:hidden;
    text-overflow: ellipsis;
    white-space:nowrap;
    display: block;
}



.nav_section_items .section_cont .store_name{
    font-size: 25rpx;
  
    color:#000;
   
}
.technician-name{
  font-size: 32rpx;
}
.introduction{
  padding: 20rpx;
  border-bottom: 40rpx solid #F5F5F5;
  font-size: 26rpx;
  color: #8a8a8a;
  line-height: 55rpx
}
.evaluation_items{
    display:flex;
    flex-direction: row;
    
    padding:30rpx 30rpx 20rpx 30rpx;
    border-bottom:2rpx solid #ddd;
    position: relative;
}
.evaluation_items:active{
    background:#ddd;
}
.evaluation_items .evaluation_image{
    width:65rpx;
    height:65rpx;
    margin-top: 10rpx;
    
}
.evaluation_items .evaluation_image image{
  border-radius: 100rpx;
    width:100%;
    height:100%;
}
.evaluation_items .evaluation_section_cont{
    width:320rpx;
    margin: 0rpx 0rpx 0rpx 20rpx;
    
}
.evaluation_items .evaluation_section_cont .evaluation-price{
    font-size: 25rpx;
    margin-top: 20rpx;
    color: #a9a9a9
}
.evaluation_items .evaluation_section_cont view{
    overflow:hidden;
    text-overflow: ellipsis;
    white-space:nowrap;
    display: block;
}
.evaluation-top{
  font-size: 30rpx;
  padding: 30rpx;
  border-bottom: 1rpx solid #ddd
}


.evaluation_items .evaluation_section_cont .evaluation_name{
   
    font-size: 25rpx;
    color:#000;
   
}
.evaluation-name{
  font-size: 25rpx;
}
.evaluation_items .store_detail{
   
    font-size:25rpx;
    color:#a9a9a9;
    text-align: left;
    margin-top: 20rpx;
}
.select-btn{
  
  height: 60rpx;
  background-color: #A40035;
  color: #F5F5F5;
  text-align: center;
  line-height: 65rpx;
  position: fixed;
  bottom: 0;
  width: 100%
}


