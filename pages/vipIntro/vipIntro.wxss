/* pages/vipIntro/vipIntro.wxss */

.header .method{
  margin-top: 20rpx;
  font-size: 26rpx;
 
  height: 80rpx;
  display: flex;
  flex-direction: row;
}
.header .method .method1{
  margin: 15rpx 0rpx 0rpx 20rpx;
  width: 60rpx;
  height: 60rpx;
}
.header .method .method1 image{
  border-radius: 100rpx;
  width: 100%;
  height: 100%
}
.header .method .method2{
  margin-top: 10rpx;
  margin-left: 20rpx
}
.header .method .method3{
  margin: 30rpx 0rpx 0rpx 350rpx;
  color: #A40035;
  text-decoration: underline
}
.middle{
  display: flex;
  flex-direction: row;
  margin: 40rpx 0rpx 0rpx 30rpx;
}
.middle .middle-line{
  margin:35rpx -10rpx 0rpx -7rpx;
  height: 10rpx;
  width: 95rpx;
  background-color: #f2f2f2
}
.middle .vip-item .vip-image{
    padding-left: 10rpx;
    width: 60rpx;
    height:60rpx;
}
.middle .vip-item .vip-image image{

    width: 100%;
    height:100%;
}
.middle .vip-item .vip-name{
  margin-top: 10rpx;
}
.middle .vip-item {
  margin-top: 10rpx;
  font-size: 26rpx;
}
.middle .vip-item .select-line{
  margin: 10rpx 0rpx 0rpx 20rpx;
  border-radius: 50rpx;
  height: 8rpx;
  width: 40rpx;
  background-color: #A40035
}
.bottom{
  background-color: #FAFAFA;
  height: 1000rpx;
}
.bottom .bottom-header{
  padding: 20rpx;
  color: #515151
}
.bottom .bottom-item{
  padding: 30rpx;
  background-color: white;
  display: flex;
  flex-direction: row;
  border-bottom: 3rpx solid #f2f2f2
}
.bottom .bottom-item .item-left{
    width: 100rpx;
}
.bottom .bottom-item .item-left .item-image{
  margin-left: 20rpx;
  width: 80rpx;
  height: 80rpx;
}
.bottom .bottom-item .item-left .item-name{
  text-align: center;
  width: 120rpx;
  font-size: 27rpx;
  margin-top: 10rpx;
  color: #515151
}
.bottom .bottom-item .item-left .item-image image{
  width: 100%;
  height: 100%;
}
.bottom .bottom-item .item-right{
  margin-left: 40rpx;
  margin-top: 30rpx;
  font-size: 26rpx;
  color: #8a8a8a
}