
.nav_section{
    width:100%;
    margin-top: 10rpx;
}
.nav_section_items{
    height: 215rpx;
    
    
    justify-content: space-between;
   padding: 10rpx 25rpx 10rpx 25rpx;
    margin: 15rpx 0rpx 15rpx 0rpx;
    position: relative;
}
.nav_section_items .item{
  border-radius: 10rpx;
  height: 100%;
  background-color: #DBE2DC;
  display:flex;
    flex-direction: row;
}

.nav_section_items:active{
    background:#ddd;
}
.nav_section_items .section_image{
  
  margin-top: 15rpx;
    width:180rpx;
    height:180rpx;
    
}
.nav_section_items .section_image image{
    border-radius: 100rpx;
    width:100%;
    height:100%;
}
.nav_section_items .section_cont{
    width:300rpx;
    font-size:26rpx;
    color:#a9a9a9;
}


.nav_section_items .section_cont .store_name{
    font-size: 25rpx;
   margin:40rpx 0rpx 30rpx 30rpx;
    color:#000;
   
}
.nav_section_items .section_cont .store_name text{
  color: #0F7E40
}
.nav_section_items .section_cont .county{
  
  margin: 10rpx 0rpx 30rpx 30rpx;
    font-size:20rpx;
    color:#515151;
    margin-left: 30rpx;
}
.nav_section_items .section_cont view{
    overflow:hidden;
    text-overflow: ellipsis;
    white-space:nowrap;
    display: block;
}

.nav_section_items .section_cont .city{
    font-size: 30rpx;
    line-height:60rpx;
    color:#343434;
    margin-left: 30rpx;
}

.nav_section_items .section_book{
   
    font-size:26rpx;
    
    background-size:17rpx 28rpx;
    line-height: 80rpx;
    color:#A40035;
    text-align: left;
    margin-top:5rpx;
    padding-left:30rpx;
}
.item-price{
  margin-left: 25rpx;
  margin-top: 20rpx;
  font-size: 25rpx;
}
.nav_section_items .store_detail{
   
    font-size:25rpx;
    
    
    line-height: 80rpx;
    color:#2c2c2c;
    text-align: left;
    margin-top:120rpx;
    margin-left: 40rpx;
    padding-left:10rpx;
}
.select-btn{
  
  height: 60rpx;
  background-color: #0F7E40;
  color: #F5F5F5;
  text-align: center;
  line-height: 65rpx;
  position: fixed;
  bottom: 0;
  width: 100%
}

